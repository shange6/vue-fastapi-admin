<template>
  <div class="upload-wrapper">
    <div class="upload-background">
      <input
        type="file"
        ref="fileInput"
        class="hidden-input"
        @change="handleFileChange"
        accept=".dwg,.dxf"
      />

      <div 
        class="upload-area" 
        :class="{ 
          'is-loading': loading, 
          'is-dragover': isDragOver 
        }"
        @click="triggerFileInput"
        @dragover.prevent="onDragOver"
        @dragleave.prevent="isDragOver = false"
        @drop.prevent="onDrop"
      >
        <div v-if="!loading" class="upload-content">
          <i class="upload-icon">+</i>
          <p class="upload-text">点击选择文件<p></p>
            或拖拽文件上传</p>
          <p class="upload-hint">支持 DWG, DXF (最大 2MB)</p>
        </div>
        
        <div v-else class="loader-content">
          <div class="spinner"></div>
          <p>正在上传...</p>
        </div>
      </div>
    </div>
    <transition name="fade">
      <div v-if="uploadStatus" :class="['status-msg', uploadStatus.type]">
        {{ uploadStatus.text }}
      </div>
    </transition>
    <div v-if="uploadResult" class="info-card">
      <div class="card-header">
        <label  class="project-tag">合同号: {{ uploadResult.合同号 || '-' }}</label>
        <h3 class="project-title">{{ uploadResult.项目名称 || '未命名项目' }}</h3>
      </div>
      
      <div class="card-grid">
        <div class="info-item">
          <label>部件名称</label>
          <span class="highlight">{{ uploadResult.部件名称 || '-' }}</span>
        </div>
        <div class="info-item">
          <label>文件编号</label>
          <span>{{ uploadResult.部件编号 || '-' }}</span>
        </div>
        <div class="info-item">
          <label>文件数量</label>
          <span>
            共 <span class="count">{{ uploadResult.文件个数 ?? 0 }}</span> 个表格
          </span>
        </div>
        <div class="info-item">
          <label>零件数量</label>
          <span class="count">{{ uploadResult?.data instanceof Array ? uploadResult.data.length : 0 }}</span>
        </div>
        
      </div>
    </div>
  </div>

  <div>




    
  </div>





</template>

<script setup>
import { ref } from 'vue'
import { request } from '@/utils/http/index.js'

const fileInput = ref(null)
const loading = ref(false)
const isDragOver = ref(false) // 拖拽状态
const uploadStatus = ref(null)

const triggerFileInput = () => !loading.value && fileInput.value.click()
const uploadResult = ref(null)
// 核心逻辑抽离，复用给点击上传和拖拽上传
const processUpload = async (file) => {
  if (!file) return

  // 格式校验 (虽然 input 有 accept，但拖拽需要手动校验)
  const isCAD = /\.(dwg|dxf)$/i.test(file.name)
  if (!isCAD) {
    showFeedback('只支持 DWG 或 DXF 格式文件', 'error')
    return
  }

  if (file.size > 2 * 1024 * 1024) {
    showFeedback('文件不能超过 2MB', 'error')
    return
  }

  const formData = new FormData()
  formData.append('file', file)

  loading.value = true
  uploadStatus.value = null

  try {
    const res = await request({
      url: '/orders/file',
      method: 'post',
      data: formData,
      headers: { 'Content-Type': 'multipart/form-data' }
    })

    if (res.code === 200 || res.success) {
      showFeedback('上传成功！', 'success')
      uploadResult.value = res.data
    } else {
      throw new Error(res.msg || '上传失败')
    }
  } catch (error) {
    showFeedback(error.message || '网络请求错误', 'error')
  } finally {
    loading.value = false
    if (fileInput.value) fileInput.value.value = '' 
  }
}

// 处理点击上传
const handleFileChange = (e) => {
  const file = e.target.files[0]
  processUpload(file)
}

// 处理拖拽移入
const onDragOver = () => {
  if (!loading.value) isDragOver.value = true
}

// 处理放下文件
const onDrop = (e) => {
  isDragOver.value = false
  if (loading.value) return
  
  const file = e.dataTransfer.files[0]
  processUpload(file)
}

const showFeedback = (text, type) => {
  uploadStatus.value = { text, type }
}
</script>

