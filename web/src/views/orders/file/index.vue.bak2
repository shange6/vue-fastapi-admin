<script setup>
import { ref } from 'vue'
import draggable from 'vuedraggable'
import { request } from '@/utils/http/index.js'

const fileInput = ref(null)
const loading = ref(false)
const isDragOver = ref(false)
const uploadStatus = ref(null)
const uploadResult = ref(null)
const tableData = ref([])

const triggerFileInput = () => !loading.value && fileInput.value.click()

const processUpload = async (file) => {
  if (!file) return
  const isCAD = /\.(dwg|dxf)$/i.test(file.name)
  if (!isCAD) {
    showFeedback('åªæ”¯æŒ DWG æˆ– DXF æ ¼å¼æ–‡ä»¶', 'error')
    return
  }
  if (file.size > 5 * 1024 * 1024) {
    showFeedback('æ–‡ä»¶ä¸èƒ½è¶…è¿‡ 5MB', 'error')
    return
  }

  const formData = new FormData()
  formData.append('file', file)
  loading.value = true
  uploadStatus.value = null

  try {
    const res = await request({
      url: '/orders/file',
      method: 'post',
      data: formData,
      headers: { 'Content-Type': 'multipart/form-data' }
    })

    if (res.code === 200 || res.success) {
      showFeedback('æ–‡ä»¶è§£ææˆåŠŸï¼', 'success')
      uploadResult.value = res.data
      if (res.data.data && Array.isArray(res.data.data)) {
        tableData.value = res.data.data.map((item, idx) => ({
          ...item,
          id: item.id || `row-${Date.now()}-${idx}`
        }))
      }
    } else {
      throw new Error(res.msg || 'æœåŠ¡å™¨å¤„ç†å¤±è´¥')
    }
  } catch (error) {
    showFeedback(error.message || 'ç½‘ç»œè¯·æ±‚é”™è¯¯', 'error')
  } finally {
    loading.value = false
    if (fileInput.value) fileInput.value.value = '' 
  }
}

const handleFileChange = (e) => processUpload(e.target.files[0])
const onDragOver = () => { if (!loading.value) isDragOver.value = true }
const onDrop = (e) => {
  isDragOver.value = false
  if (!loading.value) processUpload(e.dataTransfer.files[0])
}

const removeRow = (index) => {
  tableData.value.splice(index, 1)
}

const showFeedback = (text, type) => {
  uploadStatus.value = { text, type }
  setTimeout(() => { uploadStatus.value = null }, 5000)
}

const saveSorting = () => {
  console.log('å½“å‰åˆ—è¡¨æ•°æ®:', tableData.value)
  showFeedback('æ’åºæ•°æ®å·²æ‰“å°åˆ°æ§åˆ¶å°', 'success')
}
</script>

